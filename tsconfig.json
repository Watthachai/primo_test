{
    "compilerOptions": {
      "target": "ES2016",                
      "module": "CommonJS",              
      "outDir": "./dist",                
      "rootDir": "./src",                
      "strict": true,                   
      "esModuleInterop": true,           
      "skipLibCheck": true,              
      "forceConsistentCasingInFileNames": true, // Disallow inconsistently-cased references
      "declaration": true                // Generate corresponding '.d.ts' file
    },
    "include": ["src/**/*"],            // Files to include in compilation
    "exclude": ["node_modules", "dist", "tests"] // Folders/files to exclude
  }